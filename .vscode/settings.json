{
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "files.exclude": {
    "node_modules/**": true
  },
  "search.exclude": {
    "node_modules/**": true
  },
  "editor.stickyScroll.scrollWithEditor": true,
  "editor.wordWrap": "on",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit",
    "source.sortMembers": "explicit"
  }
}
